object $sys;

driver method .connect() {
   arg [args];

   dblog("args: " + args);
};

driver method .startup() {
   arg [args];
   var port, addr, addr2;

   port = 1234;
   addr = "206.81.134.103";
   addr2 = "206.81.134.109";
   dblog("binding.. " + addr + " " + port);
  catch any {
   (> bind_port(port, addr) <);
   (> bind_port(port, addr2) <);
  } with {
    dblog("trace: " + traceback());
  }
};
