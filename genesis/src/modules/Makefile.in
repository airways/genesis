# ColdX driver

CFLAGS=@CFLAGS@ -I../include
LDFLAGS=@LDFLAGS@
LIBS=@LIBS@
CC=@CC@

SYS=@SYS@
CPU=@CPU@
VENDOR=@VENDOR@

prefix=@prefix@
BINDIR=$(prefix)/bin
SRCDIR=$(prefix)/src
MODULES=$(SRCDIR)/modules

VERSION=@VERSION@

CDC_OBJS = cdc.o cdc_buffer.o cdc_misc.o cdc_dict.o cdc_list.o cdc_string.o
VEIL_O   = veil.o
WEB_OBJS = web.o

OBJS = $(CDC_OBJS) $(VEIL_O) $(WEB_OBJS)

SRCS = `echo $(CDC_OBJS) $(VEIL_O) | sed -e 's/\.o/.c/g'`

#######
# rules

all: cdc veil web

cdc: $(CDC_OBJS)
veil: $(VEIL_O)
web: $(WEB_OBJS)

clean:
	rm -f *~ *.BAK *.bak

scrub:
	rm -f *.o *~ *.BAK *.bak

makefile:
	@cd $(prefix); configure -q

install: all

depend:
	@makedepend -- $(CFLAGS) -- $(SRCS)
	@rm Makefile.bak

lint:
	$(LINT) -u $(SRCS)

patchable: scrub
	@chmod -f u+w Makefile
	@echo "all:" > Makefile
	@echo "	@echo \"** Invalid Makefile! **\"" >> Makefile
	@echo "	@echo \"** running the configure script ... **\"" >> Makefile
	@echo "	@cd ../..; configure" >> Makefile

../include/parse.h:
	cd ../; make grammar.o include/parse.h

